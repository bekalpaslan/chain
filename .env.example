# The Chain - Environment Configuration Template
# Copy this file to .env and replace all placeholder values with actual secrets

# Database Configuration
POSTGRES_DB=chaindb
POSTGRES_USER=chain_user
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# JWT Configuration
# IMPORTANT: Must be at least 256 bits (32 bytes base64 encoded)
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_JWT_SECRET

# Application Environment
SPRING_PROFILES_ACTIVE=docker

# Database Connection (Internal Docker Network)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=chaindb
DB_USER=chain_user
DB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Redis Connection (Internal Docker Network)
REDIS_HOST=redis
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=8080

# Frontend Configuration
PUBLIC_APP_PORT=3000
PRIVATE_APP_PORT=3001
API_BASE_URL=http://backend:8080

# Resource Limits (for docker-compose)
POSTGRES_MEMORY_LIMIT=512M
POSTGRES_CPU_LIMIT=1.0
REDIS_MEMORY_LIMIT=256M
REDIS_CPU_LIMIT=0.5
BACKEND_MEMORY_LIMIT=1G
BACKEND_CPU_LIMIT=2.0
FRONTEND_MEMORY_LIMIT=256M
FRONTEND_CPU_LIMIT=0.5

# Logging Level
LOG_LEVEL=INFO

# Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Run: ./scripts/generate-secrets.sh (if available)
# 3. Or manually generate secrets using:
#    openssl rand -base64 32
